<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kg_bank_popup" >

    <TextView
        android:id="@+id/payaccount_tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:text="@string/payaccount03"
        android:textColor="#494949"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/payaccount_tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payaccount_tv01"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/payaccount04"
        android:textColor="#494949"
        android:textSize="15dp"
        android:textStyle="normal"
        android:typeface="sans" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21.5dp"
        android:background="@drawable/kg_bank_popup_btn" >
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/payaccount05"
        android:textColor="#e82b47"
        android:textSize="14dp"
        android:typeface="sans" />
        
        </RelativeLayout>

</RelativeLayout>