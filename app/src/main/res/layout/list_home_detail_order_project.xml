<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cal_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">

    <LinearLayout
        android:id="@+id/linear_selectBox"
        android:layout_width="155.5dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93.5dp"
            android:background="@drawable/main_project_box_top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_project_box_bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textview_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="%"
                        android:textColor="#e82b47" />

                    <TextView
                        android:id="@+id/textview_percent_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/textview_percent"
                        android:text="92"
                        android:textColor="#e82b47" />

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginRight="-10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/textview_percent_value"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_horizontal_custom3"
                        android:thumb="@null" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/dDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>