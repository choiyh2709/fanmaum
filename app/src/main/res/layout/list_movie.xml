<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="88dp"
        android:padding="0dp" android:id="@+id/movielist_layout01"
        android:layout_centerHorizontal="true"
        android:background="@drawable/video_list">
        
        <ImageView android:layout_width="133dp" android:layout_height="75dp"
            android:scaleType="fitXY" android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:id="@+id/movielist_img01"/>
        
             <TextView android:layout_width="180dp" android:layout_height="wrap_content"
              android:textSize="15dp" android:textColor="#000000"
              android:maxLines="2"
              android:id="@+id/movielist_tv01"    android:layout_toRightOf="@id/movielist_img01"
              android:layout_marginTop="15dp"
              android:typeface="sans" android:layout_marginLeft="23dp"/>
             
        
               <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="13dp" android:textColor="#e82b47"
              android:maxLines="2" android:layout_toRightOf="@id/movielist_img01"
              	android:layout_alignParentBottom="true"
            	android:id="@+id/movielist_tv02"
            	android:layout_marginBottom="10dp"
              android:typeface="sans" android:layout_marginLeft="23dp"/>
               
               
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="13dp" android:textColor="#9b9b9b"
              	android:layout_alignParentBottom="true"
            	android:id="@+id/movielist_tv03"
            	  android:layout_alignParentRight="true" android:layout_marginRight="9dp"
            	android:layout_marginBottom="10dp"
              android:typeface="sans"/>
                         
        
    </RelativeLayout>
    

</RelativeLayout>