<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listlockimage_layout01"
        android:layout_width="105dp"
        android:layout_height="178.5dp" >

        <ImageView
            android:id="@+id/listlockimage_image01"
            android:layout_width="105dp"
            android:layout_height="178.5dp" 
            android:scaleType="fitXY"/>
        
        <ImageView
            android:id="@+id/listlockimage_image04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:visibility="gone"
            android:background="@drawable/o1110_black_img"/>
        
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/listlockimage_image02" android:visibility="gone"
            android:layout_centerInParent="true" android:background="@drawable/btn_check"/>
        
         <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/listlockimage_image03" android:visibility="gone"
            android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp" android:layout_marginRight="6dp"
            android:background="@drawable/btn_lock"/>
        
    </RelativeLayout>

</RelativeLayout>