<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    		
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:onClick="onClick" android:text="@string/entryemail"
        android:layout_centerHorizontal="true" android:typeface="sans"
        android:textColor="#e82b47" android:textSize="16dp"
        android:background="@drawable/btn_sub_btn01"
        android:id="@+id/entry_btn01"/>
    
    
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="15dp" android:layout_centerHorizontal="true"
        android:layout_below="@id/entry_btn01">
        
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/entry01" android:textSize="11dp"
        android:textColor="#000000" android:typeface="sans"
        android:id="@+id/entry_tv01"/>
    
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/entry02" android:layout_marginLeft="3dp"
         android:textSize="11dp" android:typeface="sans"
         android:layout_toRightOf="@id/entry_tv01"
        android:textColor="#0024ff" android:onClick="onClick" android:clickable="true"
        android:id="@+id/entry_tv02"/>    
        
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:typeface="sans"
          android:textSize="11dp" android:textColor="#000000"
          android:layout_toRightOf="@id/entry_tv02"
        android:id="@+id/entry_tv03"/>    
        
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textColor="#000000" android:typeface="sans"
        android:layout_below="@id/entry_tv01"
        android:id="@+id/entry_tv04"/>
        
    </RelativeLayout>
    
			
</RelativeLayout>