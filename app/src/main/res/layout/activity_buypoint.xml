        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buypoint_layout_50000"
        android:layout_marginTop="10dp"
        android:background="@drawable/wait_pay_account"
        android:onClick="onSeePay"
        android:visibility="gone">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buypoint_layout08"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/buy_info01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/buypoint15"
            android:textColor="#5c5b5b"
