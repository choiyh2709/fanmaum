            android:text="@string/buyprice03"
            android:textColor="#686868"
            android:textSize="15dp"
            android:typeface="sans"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buypoint_layout_10000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
