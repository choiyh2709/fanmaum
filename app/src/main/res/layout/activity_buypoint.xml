<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/navi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bar"
        >

        <ImageView
            android:id="@+id/backKey"
            android:layout_width="32.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/a1100_1_top_back_normal"
            android:onClick="onBack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/backKey"
            android:gravity="center"
            android:onClick="onBack"
            android:text="@string/savemind"
            android:textColor="#ffffff"
            android:textSize="@dimen/textview_titilebar_height"
            android:typeface="sans"/>


    </RelativeLayout>

    <Button
        android:id="@+id/buypoint_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navi"
        android:background="@drawable/buy_list_01"
        android:onClick="onSave"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/buypoint_layout_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buypoint_btn01"
        android:background="@drawable/buy_list_03"
        android:onClick="onBuy">

        <TextView
            android:id="@+id/buy_tv02_2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="@string/buyitem01"
            android:textColor="#e82b47"
            android:textSize="15dp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/buy_tv02_01_2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22.5dp"
            android:layout_toRightOf="@id/buy_tv02_2500"
            android:textColor="#595959"
            android:textSize="11dp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/buy_tv02_02_2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="@string/buyprice01"
            android:textColor="#686868"
            android:textSize="15dp"
            android:typeface="sans"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buypoint_layout_2500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
