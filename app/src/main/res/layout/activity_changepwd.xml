<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">
    <RelativeLayout
           android:id="@+id/navi"
           android:layout_width="fill_parent"
           android:layout_height="45dp"
           android:background="@drawable/navigation_bar">

           <Button
               android:id="@+id/navi_back"
               android:layout_width="32.5dp"
               android:layout_height="match_parent"
               android:layout_centerVertical="true"
               android:background="@drawable/a1100_1_top_back_normal"
               android:onClick="onBack"/>

           <TextView
               android:id="@+id/navi_tv01"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="5dp"
               android:layout_toRightOf="@id/navi_back"
               android:clickable="true"
               android:onClick="onBack"
               android:text="@string/profile03"
               android:textColor="#ffffff"
               android:textSize="18dp"
               android:typeface="sans"/>
       </RelativeLayout>


    <RelativeLayout
        android:id="@+id/changepwd_layout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/changepwd_img01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bl_list"/>

        <TextView
            android:id="@+id/changepwd_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/changepwd_img01"
            android:text="@string/changepwd01"
            android:textColor="#000000"
            android:textSize="13dp"
            android:typeface="sans"/>

        <EditText
            android:id="@+id/changepwd_et01"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textarea_m"
            android:hint="@string/changepwd02"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#aaaaaa"
            android:textSize="11dp"
            android:typeface="sans"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/changepwd_img02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:id="@+id/changepwd_layout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/changepwd_img03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bl_list"/>

        <TextView
            android:id="@+id/changepwd_tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/changepwd_img03"
            android:text="@string/changepwd03"
            android:textColor="#000000"
            android:textSize="13dp"
            android:typeface="sans"/>

        <EditText
            android:id="@+id/changepwd_et02"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textarea_m"
            android:hint="@string/changepwd04"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#aaaaaa"
            android:textSize="11dp"
            android:typeface="sans"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changepwd_layout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/changepwd_img04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bl_list"/>

        <TextView
            android:id="@+id/changepwd_tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/changepwd_img04"
            android:text="@string/changepwd03_1"
            android:textColor="#000000"
            android:textSize="13dp"
            android:typeface="sans"/>

        <EditText
            android:id="@+id/changepwd_et03"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textarea_m"
            android:hint="@string/changepwd05"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#aaaaaa"
            android:textSize="11dp"
            android:typeface="sans"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/changepwd_img05"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/line"/>

    <Button
        android:id="@+id/changepwd_btn02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sub_btn01"
        android:text="@string/next"
        android:textColor="#e82b47"
        android:textSize="16dp"
        android:typeface="sans"/>

    <Button
        android:id="@+id/changepwd_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sub_btn02"
        android:text="@string/cancel"
        android:textColor="#7f7f7f"
        android:textSize="16dp"
        android:typeface="sans"/>

</LinearLayout>
