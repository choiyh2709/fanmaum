<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
    
     <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:clickable="true"
        android:layout_marginTop="8dp" android:id="@+id/listsupport_layout"
        android:layout_marginBottom="8dp" 
        android:background="@drawable/timeline_box">
        
       <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="8월" android:layout_centerInParent="true"
        android:textSize="16dp" android:textColor="#ffffff" android:typeface="sans"
        android:id="@+id/listsupport_tv"/>
     </RelativeLayout>
     
     <RelativeLayout android:layout_width="match_parent" android:layout_height="30dp"
        android:layout_centerHorizontal="true" android:clickable="true"
        android:layout_marginTop="8dp" 
        android:background="#00000000">
   
     </RelativeLayout>
     
     
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/listsupport_layout01" android:layout_below="@id/listsupport_layout"
        android:background="@drawable/support_list_top">
      
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView android:layout_width="340dp" android:layout_height="165dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" 
		        android:id="@+id/listsupport_img01"/>
            
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
		           android:background="@drawable/support_list_img"/>
            
        </RelativeLayout>
        </RelativeLayout>
        
    
   <RelativeLayout android:layout_width="fill_parent" android:layout_height="50dp"
        android:id="@+id/listsupport_layout02" android:layout_below="@id/listsupport_layout01"
        android:background="@drawable/support_list_middle">
        
       <TextView android:layout_width="276dp" android:layout_height="wrap_content"
         android:textSize="15dp" android:layout_marginTop="10dp"
         android:text="태연의 26번째 생일선물, 루이비통 신상빽"
	     android:textColor="#000000" android:typeface="sans"
	     android:layout_marginLeft="20dp" android:singleLine="true"
         android:id="@+id/listsupport_tv01"/>
       
        <SeekBar 
	    android:id="@+id/listsupport_seekbar"
	    android:progress="90"  android:layout_below="@id/listsupport_tv01"
	    android:layout_width="276dp" android:layout_height="6dp"
	    android:layout_marginLeft="20dp" android:layout_marginTop="4dp"
	    android:progressDrawable="@drawable/progress_horizontal_custom"
	    android:focusable="false" android:focusableInTouchMode="false"
	    android:thumb="@null"
	    android:maxHeight="6dp"/>
        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:layout_alignParentRight="true" android:text="%"
     	 android:layout_alignParentBottom="true"
     	 android:id="@+id/listsupport_tv02_01"
     	 android:textStyle="bold"  android:layout_marginBottom="5dp"
     	 android:textSize="15dp" android:textColor="#000000"
     	 android:layout_marginRight="15dp"/>
        
           <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:text="42" android:textSize="22dp" android:textColor="#e82b47"
     	 android:typeface="sans" android:textStyle="bold"
     	 android:layout_alignParentBottom="true" android:layout_marginBottom="3dp"
     	 android:layout_toLeftOf="@id/listsupport_tv02_01"
     	 android:id="@+id/listsupport_tv02"/>
       
     </RelativeLayout>
     
   <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:id="@+id/listsupport_layout03" android:layout_below="@id/listsupport_layout02">
        
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
     	    android:id="@+id/listsupport_layout04" android:visibility="gone"
     	     android:background="@drawable/support_list_bottom">	
     	    
     	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:text="@string/listsupport02" android:layout_marginLeft="20dp"
     	 android:textSize="10dp" android:layout_marginTop="9dp"
     	 android:textColor="#000000" android:typeface="sans"
     	 android:id="@+id/listsupport_tv03"/>
     	
     	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:textColor="#e82b47" android:typeface="sans"
     	 android:layout_marginTop="5dp"
     	 android:textStyle="bold"  android:text="320,000" android:textSize="16dp"
     	 android:layout_toRightOf="@id/listsupport_tv03" android:layout_marginLeft="2dp"
     	 android:id="@+id/listsupport_tv04"/>
     	
     	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:textSize="10dp" android:layout_marginTop="9dp"
     	 android:textColor="#000000" android:typeface="sans"
     	 android:text="@string/listsupport03" android:layout_marginLeft="2dp"
     	 android:layout_toRightOf="@id/listsupport_tv04"
     	 android:id="@+id/listsupport_tv05"/>
     	
     		
     	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:layout_alignParentRight="true" android:layout_marginTop="5dp"
     	 android:text="@string/listsupport04" android:layout_marginRight="20dp"
     	 android:textColor="#e82b47" android:typeface="sans"
     	 android:textStyle="bold"  android:textSize="16dp"
     	 android:id="@+id/listsupport_tv06"/>
     	</RelativeLayout>
     	
    
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
     	    android:id="@+id/listsupport_layout05" android:visibility="gone"
 			android:background="@drawable/support_list_bottom">
     			
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:text="@string/listsupport05" android:layout_marginLeft="20dp"
     	 android:textSize="10dp"  android:layout_marginTop="9dp"
     	 android:textColor="#000000" android:typeface="sans"
     	 android:id="@+id/listsupport_hidetv01"/>
     	
        
        	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:textColor="#e82b47" android:typeface="sans"
     	 android:layout_marginTop="5dp"
     	 android:textStyle="bold"  android:text="320,000" android:textSize="16dp"
     	 android:layout_toRightOf="@id/listsupport_hidetv01" android:layout_marginLeft="2dp"
     	 android:id="@+id/listsupport_hidetv02"/>
        	
        
       <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:textSize="10dp"  android:layout_marginTop="9dp"
     	 android:textColor="#000000" android:typeface="sans"
     	 android:text="@string/listsupport03" android:layout_marginLeft="2dp"
     	 android:layout_toRightOf="@id/listsupport_hidetv02"
     	 android:id="@+id/listsupport_hidetv03"/>
        
       <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     	 android:layout_alignParentRight="true"  android:layout_marginTop="5dp"
     	 android:text="@string/listsupport07" android:layout_marginRight="20dp"
     	 android:textColor="#e82b47" android:typeface="sans"
     	 android:textStyle="bold"  android:textSize="16dp"
     	 android:id="@+id/listsupport_hidetv04"/>
     		
     	</RelativeLayout>
        
       </RelativeLayout>
      
   <Button android:layout_width="wrap_content" android:layout_height="50dp"
       android:visibility="gone" android:background="@drawable/support_all"
       android:layout_centerHorizontal="true"
       android:id="@+id/listsupport_btn" android:layout_below="@id/listsupport_layout03"/>
   
     <ImageView android:layout_width="fill_parent" android:layout_height="7dp"
       android:background="#eceeee" android:visibility="gone"
        android:id="@+id/listsupport_img02" android:layout_below="@id/listsupport_btn"/>
     
</RelativeLayout>