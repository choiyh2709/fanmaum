<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/lockscreen_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <android.support.v4.view.ViewPager
        android:id="@+id/adlockscreen_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/lockscreen_tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:shadowColor="#800b1e36"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="9.0"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans" />


    <TextView
        android:id="@+id/lockscreen_tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/lockscreen_tv02"
        android:shadowColor="#800b1e36"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="9.0"
        android:textColor="#ffffff"
        android:textSize="41dp"
        android:typeface="sans" />


    <TextView
        android:id="@+id/lockscreen_tv05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockscreen_tv02"
        android:layout_marginLeft="15dp"
        android:shadowColor="#800b1e36"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="9.0"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/lockscreen_tv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/lockscreen_tv05"
        android:shadowColor="#800b1e36"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="9.0"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/lock_more"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18.5dp"
        android:background="#00000000"
        android:onClick="onPopup"
        android:src="@drawable/lock_more" />

    <ImageView
        android:id="@+id/lock_center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/lock_btn04"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/lock_layout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lock_bg"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/lock_btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/lock_btn01"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="21dp">

            <TextView
                android:id="@+id/lockscreen_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="15.5dp"
                android:typeface="sans" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/lock_btn01_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/lock_btn01_on"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lock_btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="132dp"
            android:background="@drawable/lock_window"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lock_btn02_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:background="@drawable/lock_window_on"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lock_btn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="34dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/lock_btn05"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/lock_btn03_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/lock_btn05_on"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lock_realcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lock_mainbtn_on"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lock_layout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lock_center"
        android:layout_centerHorizontal="true"
        android:paddingBottom="13.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7.5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lockscreen_tv04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세용~!ㅋㅋㅋ"
            android:textColor="#000000"
            android:textSize="15.5dp"
            android:typeface="sans"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lock_help_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lockscreen_help01"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/lock_help_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lock_mainbtn_on"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/lockscreen_close"
            android:onClick="onHelp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lock_help_layout02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lockscreen_help02"
        android:clickable="true"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/lockscreen_close"
            android:onClick="onHelpAd" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lock_not_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ff00"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/lock_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

    <!-- 다이얼로그 박스 -->
    <RelativeLayout
        android:id="@+id/popup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lock_more"
        android:onClick="onClick"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <!-- 잠금화면 -->
            <RelativeLayout
                android:id="@+id/menu_layout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_list_top"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/menu_tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="19.5dp"
                    android:text="@string/lockscreenlock01"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/menu_tv01_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="19.5dp"
                    android:layout_toRightOf="@id/menu_tv01"
                    android:text="@string/lockscreenlock02"
                    android:textColor="#ff0000"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:visibility="visible" />
            </RelativeLayout>

            <!-- 홈 -->
            <RelativeLayout
                android:id="@+id/menu_layout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_list_middle"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/menu_tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/title_home"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </RelativeLayout>

            <!-- 프로젝트 -->
            <RelativeLayout
                android:id="@+id/menu_layout03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_list_middle"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/menu_hidetv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/project"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </RelativeLayout>

            <!-- 뉴스피드 -->
            <RelativeLayout
                android:id="@+id/menu_layout04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_list_middle"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/menu_tv03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/newsfeedtitle"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </RelativeLayout>

            <!-- 연예인 -->
            <RelativeLayout
                android:id="@+id/menu_layout05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_list_middle"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/menu_tv04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/celeb"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>