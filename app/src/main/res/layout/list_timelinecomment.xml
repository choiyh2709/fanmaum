<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cal_layout"
    android:layout_height="match_parent" >
   
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="88.5dp"
        android:padding="0dip"  android:background="@drawable/timeline_comment">
     	 <RelativeLayout   android:id="@+id/comment_layout01"  android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                android:layout_centerVertical="true" >
                <ImageView
                    android:id="@+id/listcomment_profile" android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/detail_profile" />
            </RelativeLayout>
        
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_layout01" android:layout_marginLeft="8.5dp"
            android:layout_marginTop="15dp">
            
            <TextView android:layout_width="270dp" android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="애비메탈" 
                android:textSize="14dp" android:textColor="#000000"
                android:textStyle="bold" android:typeface="sans" 
                android:id="@+id/listcomment_tv01"/>
            
            <TextView android:layout_width="270dp" android:layout_height="wrap_content"
                android:text="중복이어서~ 미안하다~!"
                android:layout_below="@id/listcomment_tv01"
                android:textSize="13dp" android:textColor="#000000"
                android:typeface="sans"  android:layout_marginTop="0.5dp"
                android:id="@+id/listcomment_tv02"/>
            
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="3시간전"
                android:textSize="11dp" android:textColor="#888888"
                android:typeface="sans"
                android:layout_below="@id/listcomment_tv02"
                android:id="@+id/listcomment_tv03"/>
            
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/listcomment_tv03"  android:layout_below="@id/listcomment_tv02" 
	                android:id="@+id/listcomment_layout01"
	                android:layout_marginLeft="10dp">
            
               <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:text="좋아요"
	                android:textSize="11dp" android:textColor="#ed232b"
	                android:typeface="sans" 
	                android:id="@+id/listcomment_tv04"/>
               
              <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/listcomment_tv04"
                   android:background="@drawable/detail_like" android:layout_centerVertical="true"
                   android:layout_marginLeft="1dp"
                   android:id="@+id/listcomment_img02"/>
               
              <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/listcomment_img02"
	                android:textSize="11dp" android:textColor="#ed232b"
	                android:typeface="sans" android:text="13"
	                android:layout_marginLeft="1dp"
	                android:id="@+id/listcomment_tv05"/>
                  
            </RelativeLayout>      
            
            <ImageView android:layout_width="wrap_content" android:layout_height="15dp"
                 android:layout_below="@id/listcomment_layout01" 
                android:id="@+id/listcomment_img03"/>
            
             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:textSize="12dp"  android:textColor="#888888"
	                android:typeface="sans" android:text="@string/report"
	                android:layout_marginRight="14dp"
	                android:onClick="onReport" android:clickable="true"
	                android:layout_alignParentRight="true"
	                android:id="@+id/listcomment_tv06"/>
             
             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:textSize="12dp"  android:textColor="#888888"
	                android:typeface="sans" android:text="@string/del"
	                android:layout_marginRight="14dp"
	                android:clickable="true"
	                android:layout_alignParentRight="true"
	                android:id="@+id/listcomment_tv07"/>
             
             
        </RelativeLayout>
        
     </RelativeLayout>
</RelativeLayout>