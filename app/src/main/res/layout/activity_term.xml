<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:id="@+id/term_layout01"
        android:background="@drawable/join_navigation">
        
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerInParent="true" android:typeface="sans"
         android:textSize="18dp" android:textColor="#000000"
        android:text="@string/term01"/>
    
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:onClick="onClose" android:layout_alignParentRight="true"
        android:layout_centerVertical="true" android:layout_marginRight="10dp"
        android:background="@drawable/join_close"/>
	</RelativeLayout>
		
     <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:id="@+id/term_layout02" android:layout_below="@id/term_layout01"
        android:background="@drawable/join_bg">
    
    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    	    android:textSize="15dp" android:typeface="sans" android:textColor="#000000"
    	    android:layout_marginTop="14dp" android:layout_marginLeft="16dp"
    	    android:id="@+id/term_tv01"
    	    android:text="@string/term02"/>
         
    	<ScrollView android:layout_width="329dp" android:layout_height="229dp" 
    	    android:layout_marginTop="9dp" android:id="@+id/term_scroll01"
    	    android:background="@drawable/join_box" android:scrollbars="none"
    	    android:layout_centerHorizontal="true" android:layout_below="@id/term_tv01">
    	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    	     <TextView android:layout_width="299dp" android:layout_height="wrap_content"
    	    android:textSize="13dp" android:typeface="sans" android:textColor="#555555"
    	    android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
    	    android:id="@+id/term_tv02"
    	    android:text="@string/termcontent01"/>
    	     <ImageView android:layout_width="wrap_content" android:layout_height="15dp"/>
    	    </LinearLayout>
    	</ScrollView>
    
    	
    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    	    android:textSize="15dp" android:typeface="sans" android:textColor="#000000"
    	    android:layout_marginTop="20dp" android:layout_marginLeft="16dp"
    	    android:id="@+id/term_tv03" android:layout_below="@id/term_scroll01"
    	    android:text="@string/term04"/>
    	 
    	
    		<ScrollView android:layout_width="329dp" android:layout_height="229dp" 
    	    android:layout_marginTop="9dp" android:id="@+id/term_scroll02"
    	    android:fadingEdge="none"     android:background="@drawable/join_box"
    	    android:scrollbars="none"
    	    android:layout_centerHorizontal="true" android:layout_below="@id/term_tv03">
    	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    	     <TextView android:layout_width="299dp" android:layout_height="wrap_content"
    	    android:textSize="13dp" android:typeface="sans" android:textColor="#555555"
    	    android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
    	    android:id="@+id/term_tv04" 
    	    android:text="@string/termcontent02"/>
    	    </LinearLayout>
    	</ScrollView>
    	
         
      </RelativeLayout>
    
			
</RelativeLayout>