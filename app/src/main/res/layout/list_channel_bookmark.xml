<RelativeLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/comment_layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_celeb_mid">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listcomment_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/textView_starName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/listcomment_profile"
            android:text="애비메탈"
            android:textColor="#000000"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/textView_fanNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listcomment_profile"
            android:layout_below="@+id/textView_starName"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:text="@string/total_following"
            android:textColor="#e62844"
            android:textSize="13dp"
            />

        <ImageView
            android:id="@+id/button_isBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_heart_off"
            />

    </RelativeLayout>

   </RelativeLayout>