<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eceeee"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bar"
        >

        <ImageView
            android:id="@+id/backKey"
            android:layout_width="32.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/a1100_1_top_back_normal"
            android:onClick="onBack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/backKey"
            android:gravity="center"
            android:onClick="onBack"
            android:text="@string/buypoint201"
            android:textColor="#ffffff"
            android:textSize="@dimen/textview_titilebar_height"
            android:typeface="sans"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_below="@id/navi"
        >

        <RelativeLayout
            android:id="@+id/buypoint2_btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_type_01"/>

        <RelativeLayout
            android:id="@+id/buypoint_layout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint2_btn01"
            android:background="@drawable/buy_type_02">

            <TextView
                android:id="@+id/buypoint2_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="14.5dp"
                android:text="@string/buypoint205"
                android:textColor="#e82b47"
                android:textSize="15dp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/buypoint2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="31.5dp"
                android:layout_marginTop="14.5dp"
                android:text="@string/buypoint205"
                android:textColor="#686868"
                android:textSize="15dp"
                android:typeface="sans"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buypoint_layout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint_layout01"
            android:background="@drawable/buy_type_03">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buypoint2_layout03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint_layout02"
            android:background="@drawable/buy_type_04"
            android:onClick="onBuy">

            <TextView
                android:id="@+id/buypoint2_tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56.5dp"
                android:text="@string/buypoint202"
                android:textColor="#686868"
                android:textSize="14dp"
                android:typeface="sans"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buypoint2_layout04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint2_layout03"
            android:background="@drawable/buy_type_05"
            android:onClick="onBuy">

            <TextView
                android:id="@+id/buypoint2_tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56.5dp"
                android:text="@string/buypoint203"
                android:textColor="#686868"
                android:textSize="14dp"
                android:typeface="sans"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buypoint2_layout05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint2_layout04"
            android:background="@drawable/buy_type_06"
            android:onClick="onBuy">

            <TextView
                android:id="@+id/buypoint2_tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56.5dp"
                android:text="@string/buypoint204"
                android:textColor="#686868"
                android:textSize="14dp"
                android:typeface="sans"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buypoint2_layout06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buypoint2_layout05"
            android:background="@drawable/buy_type_07"
            android:onClick="onInApp">

            <TextView
                android:id="@+id/buypoint2_tv04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56.5dp"
                android:text="@string/buypoint205"
                android:textColor="#686868"
                android:textSize="14dp"
                android:typeface="sans"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/buypoint2_tv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22.5dp"
            android:text="@string/buypoint17"
            android:textColor="#686868"
            android:textSize="9dp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/buypoint2_tv06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/buypoint2_tv05"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:text="@string/buypoint16"
            android:textColor="#686868"
            android:textSize="9dp"
            android:typeface="sans"/>
    </RelativeLayout>
</RelativeLayout>