<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/pop_top"
        android:id="@+id/sch_layout01"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sch_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:typeface="sans" android:text="연예인 선택"
            android:textSize="19dp" android:textColor="#e62844" />
          
		</RelativeLayout>

        <ListView
            android:id="@+id/sch_list01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
			android:divider="@null" android:scrollbars="none"
            android:layout_below="@id/sch_layout01"
            android:visibility="visible"
            android:layout_centerHorizontal="true" >
        </ListView>
        
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@id/sch_list01" android:layout_centerHorizontal="true"
            android:background="@drawable/pop_btn03"
            android:id="@+id/sch_layout02" android:onClick="onClick"
            android:orientation="horizontal">
        
           <TextView
            android:id="@+id/sch_tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:typeface="sans" android:text="@string/schsend"
            android:textSize="14dp" android:textColor="#8e8e8e" />
               
        </LinearLayout>

</LinearLayout>