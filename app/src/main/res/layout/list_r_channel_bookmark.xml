<LinearLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/right_celeb_list"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/comment_layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listcomment_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8.5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/textView_starName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="애비메탈"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_weight="0.5"
                />

            <TextView
                android:id="@+id/textView_fanNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/total_following"
                android:textColor="#e62844"
                android:textSize="13dp"
                android:layout_weight="0.5"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/button_isBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/right_heart_off"
            />

    </LinearLayout>
</LinearLayout>