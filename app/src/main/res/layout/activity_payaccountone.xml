<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/navi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_bar" >

        <Button
            android:id="@+id/navi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/btn_back"
            android:onClick="onBack" />

        <TextView
            android:id="@+id/navi_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/navi_back"
            android:clickable="true"
            android:onClick="onBack"
            android:text="@string/payaccount"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payaccountone_mainlayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navi"
        android:layout_centerHorizontal="true"
        android:background="@drawable/payaccount_check" >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="onDel"
            android:background="#00000000"
            android:layout_marginTop="27dp"
            android:layout_marginRight="26dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ready_close" />

        <TextView
            android:id="@+id/payaccountone_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="19dp"
            android:text="@string/payaccount02"
            android:textColor="#e82b47"
            android:textSize="25dp"
            android:typeface="sans"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/payaccountone_layout01"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="75.5dp" >

            <TextView
                android:id="@+id/payaccountone_tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payaccountone_layout02"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/payaccountone_layout01"
            android:layout_marginLeft="95dp" >

            <TextView
                android:id="@+id/payaccountone_tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000원"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payaccountone_layout03"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/payaccountone_layout02"
            android:layout_marginLeft="95dp" >

            <TextView
                android:id="@+id/payaccountone_tv04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000원"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payaccountone_layout04"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/payaccountone_layout03"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20.5dp" >

            <TextView
                android:id="@+id/payaccountone_tv05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000원"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payaccountone_layout05"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/payaccountone_layout04"
            android:layout_marginLeft="95dp" >

            <TextView
                android:id="@+id/payaccountone_tv06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000원"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payaccountone_layout06"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/payaccountone_layout05"
            android:layout_marginLeft="95dp" >

            <TextView
                android:id="@+id/payaccountone_tv07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5000원"
                android:textColor="#a3a3a3"
                android:textSize="14dp"
                android:typeface="sans" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payaccountone_mainlayout02"
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:layout_below="@id/payaccountone_mainlayout01"
        android:layout_marginLeft="95dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/payaccountone_tv08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="5000원"
            android:textColor="#a3a3a3"
            android:textSize="14dp"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>