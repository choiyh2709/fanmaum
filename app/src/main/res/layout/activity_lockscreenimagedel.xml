<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox android:layout_width="25dp" android:layout_height="25dp"
            android:id="@+id/lockscreenimagedel_check"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lockscreenimagedel_check"
            android:id="@+id/lockscreenimagedel_tv01"
            android:text="@string/lockscreendel02"/>
        
       <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:layout_alignParentRight="true" android:layout_marginRight="20dp"
           android:text="@string/lockscreendel01"  android:id="@+id/lockscreenimagedel_btn01"/>
        
    </RelativeLayout>
    
    
      <GridView
        android:id="@+id/lockscreenimagedel_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnWidth="106dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollingCache="false"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp" >
   	 </GridView>
    

</LinearLayout>