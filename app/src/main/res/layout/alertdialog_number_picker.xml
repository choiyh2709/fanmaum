<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="@drawable/a1210_1_background_like_people">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50.5dp"
            android:background="@drawable/a1200_1_background_comments"
            android:gravity="center"
            android:text="@string/goods_total"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/a1210_2_top_back" />
        <ImageView
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@drawable/a1000_popup_bottom"
            android:layout_alignParentBottom="true"
             android:textSize="16sp" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background_2_bottom"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#ffffff"
            android:divider="@null"
            android:listSelector="#fff0f0"

            />
    </LinearLayout>


</LinearLayout>