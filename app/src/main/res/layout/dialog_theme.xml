<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/theme_layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_top" >

        <TextView
            android:id="@+id/theme_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/pop00"
            android:textColor="#e62844"
            android:textSize="19dp"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/theme_layout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_content_theme"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/theme_layout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/pop_alaram_line" >

            <ImageView
                android:id="@+id/theme_img01"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#ff0000"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/theme_img01" >

                <TextView
                    android:id="@+id/theme_tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme00"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/theme_tv03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/theme_tv02"
                    android:layout_marginTop="5dp"
                    android:text="@string/theme01"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:typeface="sans" />
            </RelativeLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/theme_et01"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/theme_layout03"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/o1220_namebox"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18dp"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/theme_hidelayout01"
        android:layout_width="330dp"
        android:visibility="gone"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/theme_hideimg01"
            android:layout_width="60dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="31dp"
            android:layout_marginRight="5dp"
            android:background="#ff0000"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_theme_facebook" />

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/theme_hidelayout02" android:layout_marginTop="48dp"
            android:layout_toLeftOf="@id/theme_hideimg01" android:layout_marginRight="3dp"
            android:background="@drawable/pop_facebook_textarea">
            
              <TextView
                    android:id="@+id/theme_hidetv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme00"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:textSize="12dp"
                    android:typeface="sans" />
            
        </RelativeLayout>
        
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/theme_hidelayout03" android:layout_alignParentRight="true"
            android:layout_marginRight="45dp" android:layout_marginTop="30dp"
            android:background="@drawable/pop_facebook_no">
              
              <TextView
                    android:id="@+id/theme_hidetv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_centerInParent="true"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:typeface="sans" />
        </RelativeLayout>
        
        
        <EditText
            android:id="@+id/theme_hideet01"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/theme_hidelayout02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:background="@drawable/o1220_namebox"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18dp"
            android:typeface="sans"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/theme_hide2layout01"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:background="@drawable/pop_content"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/theme_hide2layout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/o1220_textbox" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/theme_hide2tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:textSize="18dp"
                    android:typeface="sans" />
                
                    <TextView
                    android:id="@+id/theme_hide2tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme02"
                    android:layout_toRightOf="@id/theme_hide2tv01"
                    android:textColor="#ff000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:typeface="sans" />
                
            </RelativeLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/theme_hide2et01"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/theme_hide2layout02"
            android:layout_centerHorizontal="true"
            android:background="@drawable/o1220_namebox"
            android:singleLine="true"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:typeface="sans" />
    </RelativeLayout>
    
    
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/theme_btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_bt01"
            android:onClick="onClick"
            android:text="취소"
            android:textColor="#e62844"
            android:textSize="15dp"
            android:typeface="sans" />

        <Button
            android:id="@+id/theme_btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_bt02"
            android:onClick="onClick"
            android:text="확인"
            android:textColor="#e62844"
            android:textSize="15dp"
            android:typeface="sans" />
    </LinearLayout>

</LinearLayout>