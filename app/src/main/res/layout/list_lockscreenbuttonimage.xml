<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listlockbuttonimage_layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

          <ImageView
            android:id="@+id/listlockbuttonimage_image01"
            android:layout_width="105dp"
            android:layout_height="105dp" 
            android:background="#00ff00"
            android:scaleType="fitXY"/>
          
        <ImageView
            android:id="@+id/listlockbuttonimage_image02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/o1120_default"/>
        
        <ImageView
              android:id="@+id/listlockbuttonimage_image03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:visibility="gone"
            android:background="@drawable/o1120_black_img"/>
        
        
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/listlockbuttonimage_image04" android:visibility="gone"
            android:layout_centerInParent="true" android:background="@drawable/o1120_like"/>
        
    </RelativeLayout>

</RelativeLayout>